    overflow-y: scroll;
    padding: 10px;
    border-radius: 5px;
    font-size: 10px;
    margin: 10px 0 20px;
    color: #333;
    font-weight: 500;
}

.container .result p{
    display: inline;
    margin-left: 3px;
    color: #a5a5a5;
}

.buttons{
    display: flex;
    gap: 20px;
}

.buttons .btn{
    margin-bottom: 10px;
}
  </style>
