    cursor: not-allowed;
}

.container .record .bx-spin{
    display: none;
}

.container .record.recording .bx-spin{
    display: block;
}

.container .record.recording i{
    display: none;
}

.container .result{
    width: 100%;
    border: 1px solid #a5a5a5;
